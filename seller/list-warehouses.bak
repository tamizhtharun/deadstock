<?php
require_once('header.php');

// Check if seller is logged in
if (!isset($_SESSION['seller_session'])) {
    header('location: ../index.php');
    exit;
}

$seller_id = $_SESSION['seller_session']['seller_id'];
$success_message = '';
$error_message = '';

// Handle warehouse deletion
if (isset($_GET['delete_id'])) {
    try {
        // First get warehouse ID from local DB
        $stmt = $pdo->prepare("SELECT warehouse_id FROM seller_warehouses WHERE id = ? AND seller_id = ?");
        $stmt->execute([$_GET['delete_id'], $seller_id]);
        $warehouse = $stmt->fetch(PDO::FETCH_ASSOC);
        
        if ($warehouse) {
            // Delete from local database first
            $stmt = $pdo->prepare("DELETE FROM seller_warehouses WHERE id = ? AND seller_id = ?");
            $stmt->execute([$_GET['delete_id'], $seller_id]);
            
            // Note: Delhivery API doesn't support warehouse deletion, so we just remove from local DB
            $success_message = 'Warehouse removed successfully';
        } else {
            throw new Exception('Warehouse not found or access denied');
        }
    } catch (Exception $e) {
        $error_message = $e->getMessage();
    }
}

// Fetch all warehouses for this seller
try {
    $stmt = $pdo->prepare("SELECT * FROM seller_warehouses WHERE seller_id = ?");
    $stmt->execute([$seller_id]);
    $warehouses = $stmt->fetchAll(PDO::FETCH_ASSOC);
} catch (Exception $e) {
    $error_message = 'Error fetching warehouses: ' . $e->getMessage();
    $warehouses = [];
}
